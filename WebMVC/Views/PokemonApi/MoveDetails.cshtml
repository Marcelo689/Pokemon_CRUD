@model ModelsResponse.ViewModels.MoveDetailsViewModel

@{
    ViewData["Title"] = "Move Details";
}

<div class="move-details">
    <h1 class="move-title">@Model.Name</h1>

    <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/items/tm-normal.png" alt="Move Icon" class="move-icon" />

    <table class="move-table">
        <tr>
            <th>Power</th>
            <td>@(Model.Power.HasValue ? Model.Power.ToString() : "N/A")</td>
        </tr>
        <tr>
            <th>Accuracy</th>
            <td>@(Model.Accuracy.HasValue ? Model.Accuracy.ToString() : "N/A")</td>
        </tr>
        <tr>
            <th>PP (Power Points)</th>
            <td>@(Model.PP.HasValue ? Model.PP.ToString() : "N/A")</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>
                @if (Model.IsSpecial)
                {
                    <span class="badge special">Special</span>
                }
                @if (Model.IsPhysical)
                {
                    <span class="badge physical">Physical</span>
                }
                @if (Model.IsStatus)
                {
                    <span class="badge status">Status</span>
                }
            </td>
        </tr>
        <tr>
            <th>Short Description</th>
            <td>@Model.ShorDescription</td>
        </tr>
        <tr>
            <th>Full Description</th>
            <td>@Model.Description</td>
        </tr>
    </table>
</div>