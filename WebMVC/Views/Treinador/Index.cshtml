@using ApiModelsResponse.ViewModels
@model List<TreinadorViewModel>

@{
    ViewData["Title"] = "Lista de Treinadores";
}

<h2>Lista de Treinadores</h2>
<style>
    .trainer-image {
        width: 100px; /* Ajuste conforme necessário */
        height: 100px; /* Ajuste conforme necessário */
    }
</style>
<a asp-action="Create" class="btn btn-success mb-3">Adicionar Novo Treinador</a>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Location</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var treinador in Model)
        {
            <tr>
                <td><img src="@treinador.ImagePath" class="trainer-image"/></td>
                <td>@treinador.Name</td>
                <td>@treinador.Location</td>
                <td>
                    <a asp-action="Details" asp-route-treinadorId="@treinador.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-eye"></i> Detalhes
                    </a>

                    <a asp-action="Edit"
                       asp-route-Id="@treinador.Id"
                       asp-route-Name="@treinador.Name"
                       asp-route-Location="@treinador.Location"
                       asp-route-ImagePath="@treinador.ImagePath"
                       class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a>

                    <a asp-action="Delete"
                       asp-route-treinadorId="@treinador.Id"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Tem certeza que deseja excluir o treinador @treinador.Name? Esta ação não pode ser desfeita!');">
                        <i class="fas fa-trash-alt"></i> Deletar
                    </a>
                </td>


            </tr>
        }
    </tbody>
</table>
